@require "color.styl"

// LAYOUT

menu-height = 3.2rem

html
    height 100%

body
    height 100%
    width 100%
    margin 0

body *
    color default-text
    font-family 'Noto Sans TC', sans-serif
    margin 0
    padding 0
    box-sizing border-box

body > *
    width 100%
    padding 0 2rem
    background default

@media (max-width: 480px)
    body > *
        padding 0 1em;

body > nav
    height menu-height
    position fixed 0 0
    display flex
    justify-content flex-end
    align-items center
    background rgba(default, 0.97)
    z-index 10
    & > .title
        margin-left 0
        margin-right auto
    & > .toggle-menu
        display none
        .close
            display none
    &.active > .toggle-menu
        .open
            display none
        .close
            display inline-block
    & > .create-post
        display none
    & > .menu
        display flex
        align-items center
        background rgba(default, 0.95)
    & > .menu > .item
        margin-left 1em
        a
            opacity 0.8
        a:hover
            opacity 1

@media (max-width: 480px)
    body > nav
        justify-content space-between
        & > .title
            margin auto
        & > .toggle-menu, & > .create-post
            font-size 0.8em
            display inline-block
        & > .menu
            display block
            position fixed menu-height 0 auto
            z-index -1
            opacity 0
            padding-top 0.1em
            box-shadow 0 1px 3px -2px rgba(0,0,0,0.12), 0 1px 2px -2px rgba(0,0,0,0.24)
            transform translateY(-200%)
            transition-duration 240ms
        & > .menu > .item
            font-size 1.2em
            margin 0.5em 1em 1.5em
        &.active > .menu
            opacity 1
            transform translateY(0)

body > main
    display flex
    flex-direction column
    align-items center
    min-height 100%
    // min-height "calc(100% - %s)" % menu-height
    padding-top menu-height
    position relative
    border 0
    outline 0
    box-sizing border-box
    & > .page_title
        margin 1em auto

body > footer
    height menu-height
    display flex
    align-items center
    color default-text
    background-color darker
    a
        font-size 0.9em
    p
        font-size 0.9em
        color dark-text
    .social
        margin-left auto
        margin-right 0
        a
            margin-left 1em
        .iconify
            font-size 1.25rem
        .iconify[data-icon="fa-brands:facebook"] *
            color facebook
        .iconify[data-icon="fa-brands:github"] *
            color github

// ELEMENT

h1
    font-size 2.7em

h2
    font-size 2.4em

h3
    font-size 2.1em

h4
    font-size 1.8em

h5, .title
    font-size 1.5em

h6
    font-size 1.2em


img
    width auto
    max-height 100%
    max-width 100%
    object-fit contain
    -webkit-user-drag none

a
    text-decoration none
    cursor pointer

button
    outline 0
    border 0
    background transparent
    cursor pointer

input
    border 0
    outline 0
    height 2.2em
    width 100%
    border-bottom 2px solid
    border-color default-text
    border-radius 0
    display block
    font-size 1em
    background-color default
    &:focus
        border-color primary

input[type="file"]
    position absolute
    width 1px
    height 1px
    padding 0
    margin -1px
    overflow hidden
    clip rect(0,0,0,0)
    border 0

textarea
    outline 0
    min-height 12em
    width 100%
    border 2px solid
    border-color default-text
    border-radius 0
    display block
    font-size 0.95em
    background-color default
    margin 0.4em 0
    padding 0.4em
    resize vertical
    &:focus
        border-color primary

.section_title
    margin 1.5em 0

.iconify
    font-size 2.4em

.link
    color link-text
    text-decoration none
    &:hover
        text-decoration underline

.dropdown-menu
    display flex
    flex-direction column
    margin-top 1em
    background-color default
    position absolute

.button
    text-align center
    font-size 1.2em
    padding 0.4em 1.2em
    opacity 0.85
    transition-duration 120ms
    &:hover
        opacity 1

.primary
    color primary-text
    background-color primary

.secondary
    color secondary-text
    background-color secondary

.error-text
    color red

.form
    width 20em
    max-width 100%
    .form-controls
        margin 1em 0
    .form-controls button
        width 100%
        margin 1em 0
    .form-controls label.button
        width 100%
        margin 0.4em 0
        display block
        cursor pointer

.center
    display flex
    flex-direction column
    align-items center
    justify-content center

.facebook
    color facebook-text
    background-color facebook

.subnav
    width 20rem
    max-width 100%
    display flex
    justify-content space-evenly
    margin 0.5em 0
    button
        font-size 1em
        margin 1em 0
        display block
        opacity 0.6
        transition-duration 120ms
        &:hover, &.active
            opacity 1

.subnav + .content
    max-width 100%

.subnav + .content > section
    display none
    &.active
        display block